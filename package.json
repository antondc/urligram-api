{
  "name": "clean-architecture-node-api-starter",
  "version": "1.0.0",
  "description": "Clean Architecture API starter kit",
  "main": "src/infrastructure/http/http.ts",
  "keywords": [
    "node",
    "clean-architecture",
    "api"
  ],
  "scripts": {
    "dev": "concurrently \"npm run build:dev\" \"npm run copy:sql\" \"npm run run:dev\" ",
    "copy:sql": "rsync -a --prune-empty-dirs --exclude 'dist/*' --include '*/' --include '*.sql' --exclude '*' ./ ./dist/",
    "build": "tsc",
    "build:dev": "tsc --watch",
    "run:dev": "env NODE_ENV=development nodemon dist/src/infrastructure/http/http.js",
    "run:stage": "env NODE_ENV=staging node dist/src/infrastructure/http/http.js",
    "run:prod": "env NODE_ENV=production node dist/src/infrastructure/http/http.js"
  },
  "author": "Antonio DÃ­az",
  "license": "ISC",
  "dependencies": {
    "@types/express": "^4.17.6",
    "@types/node": "^14.0.6",
    "body-parser": "^1.19.0",
    "concurrently": "^5.2.0",
    "cookie-parser": "^1.4.5",
    "express": "^4.17.1",
    "http": "0.0.1-security",
    "module-alias": "^2.2.2",
    "mysql": "^2.18.1",
    "nodemon": "^2.0.4",
    "typescript": "^3.9.3"
  },
  "_moduleAliases": {
    "@root": "dist",
    "@infrastructure": "dist/src/infrastructure",
    "@domain": "dist/src/domain",
    "@application": "dist/src/application",
    "@adapter": "dist/src/adapter"
  }
}
