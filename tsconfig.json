{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./dist/",
    "allowJs": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es5",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "paths": {
      "@root/*": ["./*"],
      "@infrastructure/*": ["src/infrastructure/*"],
      "@domain/*": ["src/domain/*"],
      "@application/*": ["src/application/*"],
      "@adapter/*": ["src/adapter/*"]
    }
  },
  "include": ["./src/**/*", "./*"]
}
