{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./dist/",
    "allowJs": true,
    "sourceMap": true,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es5",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "paths": {
      "Root/*": ["./*"],
      "Infrastructure/*": ["./src/infrastructure/*"],
      "Domain/*": ["./src/domain/*"],
      "Application/*": ["./src/application/*"],
      "Adapter/*": ["./src/adapter/*"]
    }
  },
  "include": ["./src/**/*", "./*"]
}
